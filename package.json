{
    "name": "@atomico/lit-html",
    "description": "lit-html render for Atomico webcomponents",
    "version": "1.2.0",
    "type": "module",
    "publishConfig": {
        "access": "public"
    },
    "scripts": {
        "start": "vite",
        "build": "vite build",
        "test:watch": "vitest",
        "step:types": "tsc",
        "step:build": "atomico-vite src/**/*.ts",
        "step:exports": "exports lib/**/* types/**/* --main lit-html",
        "step:test": "vitest run --coverage",
        "prepublishOnly": "npm run step:test && npm run step:types && npm run step:build && npm run step:exports"
    },
    "peerDependencies": {
        "atomico": "*",
        "lit-html": "*"
    },
    "devDependencies": {
        "@atomico/exports": "^1.2.1",
        "@atomico/tsconfig": "1.0.0",
        "@atomico/vite": "^2.1.8",
        "@vitest/coverage-c8": "^0.24.1",
        "happy-dom": "^7.5.6",
        "typescript": "^4.7.3",
        "vite": "^3.1.7",
        "vitest": "^0.24.1"
    },
    "prettier": {
        "tabWidth": 4,
        "singleQuote": false
    }
}
